			<OnLoad>
				this:RegisterForDrag("LeftButton");
				PanelTemplates_SetNumTabs(this, 3);
				PanelTemplates_SetTab(this, 1);
				Fury_OnLoad();
			</OnLoad>
			<OnEvent>Fury_OnEvent()</OnEvent>
			<OnDragStart>
				this:StartMoving();
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing();
			</OnDragStop>
